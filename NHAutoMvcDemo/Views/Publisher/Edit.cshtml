        @Html.LabelFor(model => model.CreatedBy)
        
        <div class="input">
            @Html.EditorFor(model => model.CreatedBy)
            @Html.ValidationMessageFor(model => model.CreatedBy)
        </div>

        <div class="clearfix"/>
        @Html.LabelFor(model => model.CreatedAt)
        
        <div class="input">
            @Html.EditorFor(model => model.CreatedAt)
            @Html.ValidationMessageFor(model => model.CreatedAt)
        </div>

        <div class="clearfix"/>
        @Html.LabelFor(model => model.LastUpdatedBy)
        
        <div class="input">
            @Html.EditorFor(model => model.LastUpdatedBy)
            @Html.ValidationMessageFor(model => model.LastUpdatedBy)
        </div>

        <div class="clearfix"/>
        @Html.LabelFor(model => model.LastUpdatedAt)
        
        <div class="input">
            @Html.EditorFor(model => model.LastUpdatedAt)
            @Html.ValidationMessageFor(model => model.LastUpdatedAt)
        </div>                
        
        @Html.HiddenFor(model=>model.Id)
